<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HoleText">
        <item name="android:layout_width">36dp</item>
        <item name="android:background">@drawable/back</item>
        <item name="android:padding">3dip</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="scorestyle">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/holeback</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">0dip</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.PopStyle">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginBottom">56dp</item>
        <item name="android:background">@drawable/main_buttons</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="nav_button_style">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@drawable/nav_buttons</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="stroke_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/stroke_button</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="hole_button_style">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
