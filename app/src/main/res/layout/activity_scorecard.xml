        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/nextButton"
        style="@style/nav_button_style"
        android:layout_marginTop="16dp"
        android:onClick="NextHole"
        android:text="Next Hole"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tl1"
        app:layout_constraintTop_toBottomOf="@+id/tl1" />

    <CheckBox
        android:id="@+id/checkSand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="344dp"
        android:checked="false"
        android:onClick="SandChecked"
        android:text="Sand"
        app:layout_constraintBottom_toTopOf="@+id/strokeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextButton"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/toMiddle"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl1"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/toBack"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="135dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/toMiddle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkFairway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:onClick="FairwayChecked"
        android:text="Fairway"
        app:layout_constraintBottom_toTopOf="@+id/puttButton"
        app:layout_constraintEnd_toStartOf="@+id/checkSand" />


</android.support.constraint.ConstraintLayout>