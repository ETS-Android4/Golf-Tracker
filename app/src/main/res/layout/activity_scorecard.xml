<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landscape"
    tools:context=".ScorecardActivity">

    <TextView
        android:id="@+id/toFront"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toMiddle" />

    <Button
        android:id="@+id/undoButton"
        style="@style/stroke_button_style"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="UndoStroke"
        android:text="Undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/puttButton" />

    <Button
        android:id="@+id/strokeButton"
        style="@style/stroke_button_style"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="AddScore"
        android:text="Stroke+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/puttButton"
        style="@style/stroke_button_style"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="AddPutt"
        android:text="Putt+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/strokeButton" />

    <Button
        android:id="@+id/prevButton"
        style="@style/nav_button_style"
        android:layout_marginTop="16dp"
        android:onClick="PrevHole"
        android:text="Prev Hole"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tl1"
        app:layout_constraintTop_toBottomOf="@+id/tl1" />

    <TableLayout
        android:id="@+id/tl1"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ExtraText">

        <TableRow
            android:id="@+id/r1"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv1"
                style="@style/HoleText"
                android:text="1" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="2"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="3"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="4"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="5"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="6"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="7"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="8"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="9"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="45dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="Out"
                android:textAlignment="center"
                android:textSize="12dp" />

        </TableRow>


        <TableRow
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv11"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv12"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv13"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv14"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv15"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv16"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv17"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv18"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv19"
                style="@style/scorestyle"
                android:text="" />

            <TextView
                android:id="@+id/tv20"
                style="@style/scorestyle"
                android:text="0" />

        </TableRow>

        <TableRow
            android:id="@+id/r3"
            android:layout_width="368dp"
            android:layout_height="48dp"
            android:gravity="top">

            <TextView
                android:id="@+id/tv21"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="1"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv22"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="2"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv23"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="3"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv24"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="4"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv25"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="5"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv26"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="6"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv27"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="7"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv28"
                android:layout_width="36dp"
                android:background="@drawable/back"
                android:padding="3dip"
                android:text="8"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv29"
                android:layout_width="36dp"
